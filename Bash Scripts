#Print out the monts
for month in ${months[@]};
do
  echo $month
done

#Prints the days of the week
for day in ${dayhs[@]};
do
   if [ $day = 'Sun'] || [$day = 'Sat']
   then
     echo "It is a $day. Have a good day."
   else
     echo "It is $day. Its not the weekend yet you slob."
   fi
done

# Run a command on each file
for file in $(ls);
do
   ls -lah $file
done

# Run an operation on a number
